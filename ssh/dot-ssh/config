# vim:ft=sshconfig

AddKeysToAgent no
Host *
  PermitLocalCommand yes
  LocalCommand ${DOTFILES_DIR}/scripts/title.sh "%r@%n"
Host debian1.lan
  User peelz
  IdentityFile ${XDG_RUNTIME_DIR}/git_secrets/private/debian1/id_peelz
Host rpi1.lan
  User peelz
  IdentityFile ${XDG_RUNTIME_DIR}/git_secrets/private/rpi1/id_peelz
Host github.com
  User peelz
  IdentityFile ${XDG_RUNTIME_DIR}/git_secrets/private/github/id_peelz
Host gitlab.com
  User peelz
  IdentityFile ${XDG_RUNTIME_DIR}/git_secrets/private/gitlab/id_peelz
