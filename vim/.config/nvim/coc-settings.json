// vim:ft=jsonc:foldmethod=marker

{
  // Prevent coc from creating a default.vim session {{{
  "session.saveOnVimLeave": false,
  // }}}

  // Git highlight groups {{{
  "git.addedSign.hlGroup": "GitGutterAdd",
  "git.changedSign.hlGroup": "GitGutterChange",
  "git.removedSign.hlGroup": "GitGutterDelete",
  "git.topRemovedSign.hlGroup": "GitGutterDelete",
  "git.changeRemovedSign.hlGroup": "GitGutterChangeDelete",
  // }}}

  // Signs {{{
  "diagnostic.warningSign": "",
  "diagnostic.infoSign": "",
  "diagnostic.errorSign": "",
  "diagnostic.hintSign": "",
  "diagnostic.signPriority": 9,
  "git.signPriority": 11,
  // }}}

  // CodeLens {{{
  "codeLens.enable": false,
  "codeLens.separator": "‣",
  "codeLens.subseparator": " ",
  // }}}

  // Hover {{{
  "hover.floatConfig": {
    "border": false,
    "highlight": "CocFloating",
    "focusable": true
  },
  // }}}

  // Formatting {{{
  "coc.preferences.formatOnType": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "javascript",
    "typescript",
    "cs",
    "css",
    "markdown"
  ],
  // }}}

  // Suggest {{{
  "suggest.autoTrigger": "none",
  "suggest.enablePreselect": false,
  "suggest.noselect": true,
  "suggest.completionItemKindLabels": {
    "keyword": "\uf1de",
    "variable": "\ue79b",
    "value": "\uf89f",
    "operator": "\u03a8",
    "constructor": "\uf0ad",
    "function": "\u0192",
    "reference": "\ufa46",
    "constant": "\uf8fe",
    "method": "\uf09a",
    "struct": "\ufb44",
    "class": "\uf0e8",
    "interface": "\uf417",
    "text": "\ue612",
    "enum": "\uf435",
    "enumMember": "\uf02b",
    "module": "\uf40d",
    "color": "\ue22b",
    "property": "\ue624",
    "field": "\uf9be",
    "unit": "\uf475",
    "event": "\ufacd",
    "file": "\uf723",
    "folder": "\uf114",
    "snippet": "\ue60b",
    "typeParameter": "\uf728",
    "default": "\uf29c"
  },
  // }}}

  // coc-prettier {{{
  "prettier.requireConfig": true,
  "prettier.disableSuccessMessage": true,
  // }}}

  // Snippets {{{
  "snippets.extends": {
    "javascriptreact": ["javascript"],
    "typescriptreact": ["javascript"],
    "typescript": ["javascript"]
  },
  // }}}

  // coc-explorer {{{
  "explorer.icon.enableNerdfont": true,
  "explorer.root.strategies": [
    "keep",
    "workspace",
    "cwd",
    "sourceBuffer",
    "reveal"
  ],
  "explorer.file.cdCommand": "tcd",
  "explorer.keyMappings.global": {
    "u": ["wait", "gotoParent"],
    "r": "rename",
    "<cr>": [
      "expandable?",
      ["expanded?", "collapse", "expand"],
      ["open", "quit"]
    ],
    "t": ["open:tab"],
    "T": ["open:tab"],
    "<C-t>": ["open:tab"],
    "o": ["wait", "expandable?", "cd", "open"],
    "F": "search",
    "f": "search:recursive"
  },
  "explorer.file.hiddenRules": {
    "extensions": ["o", "a", "obj", "pyc"],
    "filenames": ["node_modules"],
    "patternMatches": ["^\\."]
  },
  "explorer.file.reveal.filter": {
    "literals": ["node_modules"]
  },
  // }}}

  // coc-list {{{
  "list.source.files.command": "rg",
  "list.source.files.args": ["--hidden", "--files"],
  "list.source.mru.ignoreGitIgnore": true,
  "list.normalMappings": {
    "<C-c>": "do:exit"
  },
  "list.insertMappings": {
    "<C-c>": "do:exit"
  },
  // }}}

  // coc-tsserver {{{
  "tsserver.disableAutomaticTypeAcquisition": false,
  "typescript.implementationsCodeLens.enable": false,
  "javascript.suggestionActions.enabled": false,
  // XXX: Unfortunately this disables snippets for all coc extensions
  "snippets.loadFromExtensions": false
  // }}}
}
